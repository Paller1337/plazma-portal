generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BanquetStatus {
  sent
  not_sent
}

enum BanquetIikoStatus {
  new
  Error
  Success
  InProgress
}

model Banquet {
  id             String        @id
  idN            String?
  iikoId         String?
  iikoMessage    String?
  iikoStatus     BanquetIikoStatus? @default(new)
  createdAt      String?
  editedAt       String?
  serviceNote    String?
  status         BanquetStatus
  banquetData    Json
  needSum        Int?
  needPersonSum  Int?
  payments       Json?
  isDeleted      Boolean?      @default(false)

  @@map("banquets")
}

